# DexIQ AI Presenter - Environment Variables
# Copy this file to .env and fill in your values

# OpenAI API (Primary LLM)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# ElevenLabs API (Live TTS)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=your_voice_id_here

# Server Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
CHAINLIT_HOST=0.0.0.0
CHAINLIT_PORT=8001

# WebSocket URLs (used by Chainlit to connect to backend)
BACKEND_WS_URL=ws://localhost:8000/ws/control

# Presentation URL (for QR code generation)
PRESENTATION_URL=http://localhost:8000

# Debug mode
DEBUG=true
